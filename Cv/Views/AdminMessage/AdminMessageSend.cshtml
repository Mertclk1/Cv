@model Cv.Entity.Classes.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AdminMessageSend", "AdminMessage", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yeni Mesaj Gönder</h4>


				<div class="form-group">
					<label for="exampleInputName1"> Konu </label>
					@Html.TextBoxFor(x=>x.Subject, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputName1"> Alıcı </label>
					@Html.TextBoxFor(x=>x.Recever, new {@class = "form-control"})
				</div>				
				<div class="form-group">
					<label for="exampleInputPassword4">Mesaj </label>
					@Html.TextAreaFor(x=>x.MessageContent,10,3, new {@class = "form-control"})
				</div>


				<button class="btn btn-inverse-success mr-2">Gönder</button>
				<a href="/AdminMessage/" class="btn btn-inverse-warning">Geri Dön</a>

			</div>
		</div>
	</div>
}
