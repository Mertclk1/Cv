@model Cv.Entity.Classes.WriterMessage

@{
    ViewData["Title"] = "DetailsReceiverAdminMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Giden Mesaj Detayı</h4>


			<div class="form-group">
				<label for="exampleInputName1"> Gönderen Adı </label>
				@Html.TextBoxFor(x=>x.ReceverName, new {@class = "form-control"})
			</div>
			<div class="form-group">
				<label for="exampleInputName1"> Gönderilen Mail </label>
				@Html.TextBoxFor(x=>x.Sender, new {@class = "form-control"})
			</div>
			<div class="form-group">
				<label for="exampleInputEmail3"> Tarih Bilgisi </label>
				@Html.TextBoxFor(x=>x.Date, new {@class = "form-control"})
			</div>
			<div class="form-group">
				<label for="exampleInputPassword4">Mesaj Bilgisi</label>
				@Html.TextAreaFor(x=>x.MessageContent,10,3, new {@class = "form-control"})
			</div>

			<a href="/AdminMessage/ReceiverMessageList" class="btn btn-dark">Geri Dön</a>

		</div>
	</div>
</div>

