@model Cv.Entity.Classes.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title"> Hakkımda Düzenleme Sayfası </h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>Başlık</th>
								<th>Yaş</th>
								<th>Mail</th>
								<th>Telefon</th>
								<th>Adres</th>
								<th>Göresel Yolu</th>								
								<th>Açıklama</th>
								
							</tr>
						</thead>
						<tbody>

							<tr>
								<td>
									@Html.TextBoxFor(x=>x.Title, new {@class = "form-control"})
								</td>

								<td>
									@Html.TextBoxFor(x=>x.Age, new {@class = "form-control"})
								</td>

								<td>
									@Html.TextBoxFor(x=>x.Mail, new {@class = "form-control"})
								</td>
								<td>
									@Html.TextBoxFor(x=>x.Phone, new {@class = "form-control"})
								</td>

								<td>
									@Html.TextBoxFor(x=>x.Address, new {@class = "form-control"})
								</td>

								<td>
									@Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control"})
								</td>
								
								<td>
								   @Html.TextAreaFor(x=>x.Description,10,45, new {@class = "form-control"})  
								</td>

								
							</tr>						   
						</tbody>						
					</table>
					<button class="btn btn-inverse-success">Gücelle</button>
				</div>
			</div>
		</div>
	</div>
}