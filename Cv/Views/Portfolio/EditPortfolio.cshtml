@model Cv.Entity.Classes.Portfolio
@{
	ViewData["Title"] = "EditPortfolio";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Proje Düzenleme Sayfası </h4>

				<div class="form-group">
					<label for="exampleInputName1"> Proje Adı </label>
					@Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.Name)
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Goresel 1 </label>
					@Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.ImageUrl)
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Göresel 2</label>
					@Html.TextBoxFor(x=>x.ImageUrl2, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.ImageUrl2)
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4"> Proje URL </label>
					@Html.TextBoxFor(x=>x.ProjectUrl, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.ProjectUrl)
				</div>
				<div class="form-group">
					<label for="exampleInputName1"> Fiyat </label>
					@Html.TextBoxFor(x=>x.Price, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.Price)
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Tamamlanma Oranı </label>
					@Html.TextBoxFor(x=>x.Value, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.Value)
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Platform</label>
					@Html.TextBoxFor(x=>x.Platform, new {@class = "form-control"})
					@Html.ValidationMessageFor(x=>x.Platform)
				</div>

				<button class="btn btn-inverse-success mr-2">Güncelle</button>
				<a href="/Portfolio/Index" class="btn btn-inverse-warning">Geri Dön</a>

			</div>
		</div>
	</div>
}


