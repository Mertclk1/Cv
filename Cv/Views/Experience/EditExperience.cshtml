@model Cv.Entity.Classes.Experience
@{
    ViewData["Title"] = "EditExperience";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yeni Belge Düzenleme Sayfası</h4>
				<p class="card-description"> Yeni Belge Düzenle </p>

				<div class="form-group">
					<label for="exampleInputName1"> Belge Adı </label>
					@Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Tarih Bilgisi </label>
					@Html.TextBoxFor(x=>x.Date, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Açıklama</label>
					@Html.TextAreaFor(x=>x.Description,10,3, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4"> Ekelenecek Resim </label>
					@Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control"})
				</div>

				<button class="btn btn-primary mr-2">Kaydet</button>
				<a href="/Experience/Index" class="btn btn-dark">Geri Dön</a>

			</div>
		</div>
	</div>
}

