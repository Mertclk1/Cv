@using Cv.Entity.Classes
@model List<Experience>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Diploma ve Sertifika Düzenleme Sayfası </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Başlık</th>
							<th>Tarih</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>
									@item.Name
								</th>
								<td>
									@item.Date
								</td>
								<td> <a href="/Experience/DeleteExperience/@item.ExprerienceID" class="btn btn-outline-danger">Sil</a> </td>
								<td> <a href="/Experience/EditExperience/@item.ExprerienceID" class="btn btn-outline-success">Güncelle</a> </td>
							</tr>
						}
					</tbody>
				</table>
				<a href="/Experience/EditExperience" class="btn btn-outline-info"> Yeni Belge Ekle </a>
			</div>
		</div>
	</div>
</div>
