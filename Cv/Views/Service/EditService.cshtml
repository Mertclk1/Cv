@model Cv.Entity.Classes.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
				

				<div class="form-group">
					<label for="exampleInputName1"> Hizmet Başlığı </label>
					@Html.TextBoxFor(x=>x.Title, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Göresel Yolu </label>
					@Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control"})
				</div>
				

				<button class="btn btn-inverse-success mr-2">Kaydet</button>
				<a href="/Service/Index" class="btn btn-inverse-warning">Geri Dön</a>

			</div>
		</div>
	</div>
}

