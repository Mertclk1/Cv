@model Cv.Entity.Classes.SocialMedia

@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Sosyal Medya Düzenleme Sayfası</h4>

				<div class="form-group">
					<label for="exampleInputName1"> Sosyal Medya Adı </label>
					@Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Url </label>
					@Html.TextBoxFor(x=>x.Url, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4"> Ikonu </label>
					@Html.TextBoxFor(x=>x.Icon, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4"> Aktif/Pasif </label>
					@Html.CheckBoxFor(x=>x.Status, new {@class = "checkBox-control"})
				</div>
				<button class="btn btn-primary mr-2">Ekle</button>
				<a href="/SocialMedia/Index" class="btn btn-dark">Geri Dön</a>

			</div>
		</div>
	</div>
}
