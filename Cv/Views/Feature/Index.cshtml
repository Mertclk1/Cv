@model Cv.Entity.Classes.Feature
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title"> Öne Çıkan Post Düzenleme Sayfası </h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>Başlık</th>
								<th>Ad Soyad</th>
								<th>Görev</th>
								<th>Düzenle</th>
							</tr>
						</thead>
						<tbody>

							<tr>
								<td>
									@Html.TextBoxFor(x=>x.Header, new {@class = "form-control"})
								</td>
								
								<td>
								    @Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
								</td>
								
								<td>
								    @Html.TextBoxFor(x=>x.Title, new {@class = "form-control"})
								</td>


								<td> <button class="btn btn-inverse-success">Gücelle</button> </td>
							</tr>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
}