@model Cv.Entity.Classes.Message
@{
    ViewData["Title"] = "Mesaj Gör";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("DetailsContact", "Contact", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Mesaj Düzenleme Sayfası</h4>
				
				
				<div class="form-group">
					<label for="exampleInputName1"> Gönderen Adı </label>
					@Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputName1"> Gönderen Adı </label>
					@Html.TextBoxFor(x=>x.Mail, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputEmail3"> Tarih Bilgisi </label>
					@Html.TextBoxFor(x=>x.Date, new {@class = "form-control"})
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Açıklama</label>
					@Html.TextAreaFor(x=>x.Content,10,3, new {@class = "form-control"})
				</div>			
								
				<a href="/Contact/Index" class="btn btn-dark">Geri Dön</a>

			</div>
		</div>
	</div>
}