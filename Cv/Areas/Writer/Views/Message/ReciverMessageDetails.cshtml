@model Cv.Entity.Classes.WriterMessage

@{
    ViewData["Title"] = "ReciverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Mesaj Detay</h4>
			<div class="forms-sample">
				@Html.HiddenFor(x=>x.WtiterMessageId, new {@class = "form-control"})

				@Html.Label("Alıcı Adı")
				@Html.TextBoxFor(x=>x.ReceverName, new {@class = "form-control"})
				<br />
				@Html.Label("Alıcı Mail")
				@Html.TextBoxFor(x=>x.Recever, new {@class = "form-control"})
				<br />
				@Html.Label("Mesaj")
				@Html.TextAreaFor(x=>x.MessageContent, 10, 3, new {@class = "form-control"})
			</div>
		</div>
	</div>
</div>



