@using Cv.Entity.Classes
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Giden Kutusu</h4>

			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Konu</th>
							<th>Alıcı</th>
							<th>Tarih</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{							
							<tr>
								<th>@item.WtiterMessageId</th>
								<td>@item.Subject</td>
								<td>@item.ReceverName</td>
								<td>@(((DateTime)item.Date).ToString("dd-MM-yyyy"))</td>
								<td> <a href="/Writer/Message/MessageDetails/@item.WtiterMessageId" class=" btn btn-inverse-primary"> Mesajı Gör </a>  </td>
							</tr>

						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
